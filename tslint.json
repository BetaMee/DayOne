{
  "extends": [
    "tslint-react",
    "tslint-react-hooks"
  ],
  "rules": {
    "jsx-no-multiline-js": false,
    "max-line-length": {
      "options": [
        120
      ]
    },
    "semicolon": [true, "never"],
    "quotemark": [true, "single", "jsx-single"],
    "trailing-comma": [
      true, {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "no-implicit-dependencies": [
      true,
      "dev",
      ["@store", "@interfaces", "@common"]]
  }
}